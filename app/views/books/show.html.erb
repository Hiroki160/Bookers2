<%= render 'users/list', user: @user %>
<%= render 'list', book: @book %>


<h1>Book detail</h1>

<div>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p><%= link_to @book.title, edit_book_path(@book) %></p>
  <p><%= @book.body %></p>
  <p><%= link_to @book.user.name, user_path(current_user) %></p>
</div>

<tbody>
  <tr>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%>
  <% end %>
  </tr>
</tbody>
